{{- $interactive := stdinIsATTY -}}
{{- $codespaces:= env "CODESPACES" | not | not -}}

{{- $name := "Celeste PelÃ¡ez" -}}
{{- if hasKey . "name" -}}
{{-   $name = .name -}}
{{- else if $interactive -}}
{{-   $name = promptStringOnce . "name" "What is your name?" $name -}}
{{- end -}}

{{- $email := "celeste@etheryal.net" -}}
{{- if hasKey . "email" -}}
{{-   $email = .email -}}
{{- else if $interactive -}}
{{-   $email = promptStringOnce . "email" "What is your email address?" $email -}}
{{- end -}}

{{- $signingkey := "" -}}
{{- if hasKey . "signingkey" -}}
{{-   $signingkey = .signingkey -}}
{{- else if $interactive -}}
{{-   $signingkey = promptStringOnce . "signingkey" "What's your GPG signing key? (leave blank to skip)" $signingkey -}}
{{- end -}}

{{- $accessToken := "" -}}
{{- if hasKey . "accessToken" -}}
{{-   $accessToken = .accessToken -}}
{{- else if $interactive -}}
{{-   $accessToken = promptStringOnce . "accessToken" "What's your BitWarden Secrets access token? (leave blank to skip)" $accessToken -}}
{{- end -}}

{{- $path := "" -}}
{{- if hasKey . "path" -}}
{{-   $path = .path -}}
{{- else if $interactive -}}
{{-   $path = promptStringOnce . "path" "Do you want to customize your PATH environment variable? (leave blank to skip)" $path -}}
{{- end -}}

